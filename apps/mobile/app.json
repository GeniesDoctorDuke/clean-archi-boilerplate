{
  "expo": {
    "name": "clean-archi-boilerplate",
    "slug": "clean-archi-boilerplate",
    "privacy": "public",
    "sdkVersion": "34.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 10000
    },
    "scheme": "xcapetir-demo",
    "ios": {
      "bundleIdentifier": "com.xaviercarpentier.demo",
      "supportsTablet": true,
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "icon": "./src/assets/images/icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to update your avatar picture or to send images through the chat",
        "NSPhotoLibraryUsageDescription": "This app uses photos to update your avatar picture or to send images through the chat"
      },
      "associatedDomains": [
        "applinks:demo.xaviercarpentier.com"
      ]
    },
    "android": {
      "package": "com.xaviercarpentier.demo",
      "versionCode": 1,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "demo.xaviercarpentier.com"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "androidShowExponentNotificationInShellApp": false
  },
  "assetBundlePatterns": [
    "src/assets/images/**",
    "src/assets/fonts/*.ttf",
    "node_modules/@expo/vector-icons/fonts/*.ttf",
    "node_modules/react-native-dropdownalert/assets/*.png"
  ],
  "packagerOpts": {
    "config": "metro.config.js"
  }
}